@model IEnumerable<ServiceCenter.Domain.Viewmodel.Tariff.TariffListViewModel>


<h1 class="h3 mb-2 text-gray-800">Тарифные планы</h1>

<div class="my-2"></div>

<div class="card shadow mb-4">
    <div class="card-body">

        <table class="table" id="minedatatable">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TariffType)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Price)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TariffType)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

@if(ViewBag.DeleteError)
{
    <script>
    alert("asdas");
    </script>
}

@section Scripts
    {
    <script>
        $(document).ready(function () {
            $("#minedatatable").DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.4/i18n/ru.json'
                }
            });
        })
    </script>
}