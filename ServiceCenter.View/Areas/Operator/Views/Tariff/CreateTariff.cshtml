@model ServiceCenter.Domain.Viewmodel.Tariff.TariffViewModel

<h4>Тарифный план</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @if(ViewBag.Error)
        {
            <p>Невозможно добавить тарифный план. Отсутствуют виды тарифов.</p>
        }
        else
        {
            <form asp-action="CreateTariff">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TariffType_ID" class="control-label"></label>
                        <select class="form-select" asp-for="TariffType_ID" asp-items="@ViewBag.TariffTypesCmb"></select>
                    <span asp-validation-for="TariffType_ID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Сохранить" class="btn btn-primary" />
                </div>
            </form>
        }
    </div>
</div>

<div>
    <a asp-controller="Tariff" asp-action="Tariffs">Вернуться</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
