@model ServiceCenter.Domain.Viewmodel.OrderMaterialV.OrderMaterialViewModel

<h4>Материал заявки</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @if(ViewBag.Error)
        {
            <p>Невозможно добавить материал, так как материалы отсутствуют.</p>
        }
        else
        {
            <form asp-action="AddOrderMaterial">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Material_ID" class="control-label"></label>
                        <select class="form-select" asp-for="Material_ID" asp-items="@ViewBag.Materials"></select>
                        <span asp-validation-for="Material_ID" class="text-danger"></span>
                    </div>
                <div class="form-group">
                    <label asp-for="Count" class="control-label"></label>
                    <input asp-for="Count" class="form-control" />
                    <span asp-validation-for="Count" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Добавить" class="btn btn-primary" />
                </div>
            </form>
        }
        
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
